                                <RowDefinition Height="24"/>
                                <RowDefinition Height="24"/>
                                <RowDefinition Height="24"/>
                                <RowDefinition Height="24"/>
                                <RowDefinition Height="24"/>
                                <RowDefinition Height="24"/>
                                <RowDefinition Height="24"/>
                            </Grid.RowDefinitions>
                            <StackPanel Background="#488FCE" Margin="0,2,4,0">
                                <TextBlock Text="未知词性" x:Uid="textblockSignInItemName" Style="{StaticResource legendTB}"/>
